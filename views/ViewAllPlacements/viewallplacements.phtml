function generateSortURL($page, $limit, $searchField, $sort)
{
    $baseURL = "placements?page=$page&limit=$limit";
    $search = isset($searchField) ? "&search=" . urlencode($searchField) : '';
    return "$baseURL$search&sort=$sort";
}
